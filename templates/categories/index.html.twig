{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ParentId</th>
                <th>Name</th>
                <th>Url</th>
                <th>FullUrl</th>
                <th>Title</th>
                <th>Description</th>
                <th>Meta</th>
                <th>Keywords</th>
                <th>Active</th>
                <th>Deleted</th>
                <th>Created</th>
                <th>Updated</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentId }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.url }}</td>
                <td>{{ category.fullUrl }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.meta }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.active }}</td>
                <td>{{ category.deleted }}</td>
                <td>{{ category.created ? category.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.updated ? category.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.startTime ? category.startTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.endTime ? category.endTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}
