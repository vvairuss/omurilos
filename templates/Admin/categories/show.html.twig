{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>ParentId</th>
                <td>{{ category.parentId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ category.url }}</td>
            </tr>
            <tr>
                <th>FullUrl</th>
                <td>{{ category.fullUrl }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Meta</th>
                <td>{{ category.meta }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ category.keywords }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ category.active }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ category.deleted }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ category.created ? category.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ category.updated ? category.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ category.startTime ? category.startTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ category.endTime ? category.endTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
